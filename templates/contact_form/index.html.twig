{% extends 'base.html.twig' %}

{% block title %}ContactForm index{% endblock %}

{% block body %}
    <h1>Üzenetek</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Név</th>
                <th>Email</th>
                <th>Üzenet</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact_form in contact_forms %}
            <tr>
                <td>{{ contact_form.name }}</td>
                <td>{{ contact_form.email }}</td>
                <td>{{ contact_form.message }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_contact_form_show', {'id': contact_form.id}) }}">Megtekintés</a>
                    <a class="btn btn-info" href="{{ path('app_contact_form_edit', {'id': contact_form.id}) }}">Módosítás</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Nem találtunk üzenetet.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_contact_form_new') }}">Új üzenet hozzáadása</a>
{% endblock %}
